<head>
<title>장례의 메모장★</title>
<script> 
var num = window.localStorage.getItem('num') ?  
parseInt(window.localStorage.getItem('num')) : 
0; 
window.onload = putString; 
function mis() { 
   num -= 1; 
   window.localStorage.setItem('num', num); 
   putString(); 
} 
function putString() { 
   document.getElementById('numberContainer').innerText = num; 
} 
</script>
</head>
<body>
